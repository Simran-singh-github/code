class Sol
{
   public static Node findIntersection(Node head1, Node head2)
    {
        // code here.
        Node head = null;
        Node curr = null;
        
        if(head1 == null || head2 == null){
            return null;
        }
        
        while(head1 != null && head2 != null){
            if(head1.data == head2.data){
                if(head == null){
                    Node newNode = new Node(head1.data);
                    head = newNode;
                    curr = newNode;
                }
                else{
                    Node newNode = new Node(head1.data);
                    curr.next = newNode;
                    curr = curr.next;
                }
                head1 = head1.next;
                head2 = head2.next;
            }
            else{
                if(head1.data < head2.data){
                    head1 = head1.next;
                }
                else{
                    head2 = head2.next;
                }
            }
        }
        return head;
    }
}
