class Solution 
{
    //Function to reverse words in a given string.
    String reverseWords(String s)
    {
        // code here 
        StringBuilder str = new StringBuilder();
        String arr[] = s.split("[.]");
        
        for(int i=arr.length-1;i>=0;i--){
            str.append(arr[i]);
            if(i > 0){
                str.append('.');
            }
        }
        String ss = str.toString();
        return ss;
    }
}
